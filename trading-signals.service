[Unit]
Description=Trading Signals System with Telegram Bot
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/trading-signals
ExecStart=/usr/bin/node /var/www/trading-signals/server.js
Restart=always
RestartSec=10
StandardOutput=append:/var/log/trading-signals/output.log
StandardError=append:/var/log/trading-signals/error.log

